<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.series.db.beans">
    <class name="org.n52.series.db.beans.feature.gml.CoordinateSystemAxisEntity"
           table="coordinate_system_axis">
        <id name="id"
            type="long">
            <column name="id">
                <comment>Table primary key, used for relations</comment>
            </column>
            <generator class="native">
                <param name="sequence_name">coordinate_system_axis_seq</param>
            </generator>
        </id>
        <property name="nilReason" column="nil_reason" type="string" />
        <property name="href" column="href" type="string" />
        <property name="type" column="type" type="string" />
        <property name="role" column="role" type="string" />
        <property name="arcrole" column="arcrole" type="string" />
        <property name="title" column="title" type="string" />
        <property name="show" column="show" type="string" />
        <property name="actuate" column="actuate" type="string" />
        <property name="remoteSchema" column="remote_schema" type="string" />
        <property name="domain" type="string" >
            <column name="domain" unique-key="coordinate_system_axis_uk">
                <comment>The identifier of the object, gml:identifier. Used as parameter for queries. Optional but unique</comment>
            </column>
        </property>
        <many-to-one name="codespace" class="CodespaceEntity" foreign-key="csa_codespace_fk">
            <column name="codespace">
                <comment>Relation/foreign key to the codespace table. Contains the gml:identifier codespace. Optional</comment>
            </column>
        </many-to-one>
        <property name="name" type="string">
            <column name="name">
                <comment>The name of the object, gml:name. Optional</comment>
            </column>
        </property>
        <many-to-one name="codespaceName" class="CodespaceEntity" foreign-key="csa_codespace_name_fk">
            <column name="codespace_name">
                <comment>The name of the object, gml:name. Optional</comment>
            </column>
        </many-to-one>
        <property name="description" type="string">
            <column name="description">
                <comment>Description of the object, gml:description. Optional</comment>
            </column>
        </property>
        <property name="remarks" column="remarks" type="string" />
        <property name="axisAbbrev" column="axis_abbrev"  type="string" />
        <many-to-one name="codespaceAxisAbbrev" column="codespace_axis_abbrev" class="CodespaceEntity" foreign-key="codespace_axis_abbrev_fk" />
        <property name="axisDirection" column="axis_direction" type="string" />
        <many-to-one name="codespaceAxisDirection" column="codespace_axis_direction" class="CodespaceEntity" foreign-key="codespace_axis_direction_fk" />
        <property name="minimumValue" column="minimum_value" type="big_decimal" length="29" />
        <property name="maximumValue" column="maximum_value" type="big_decimal" length="29"  />
        <property name="rangeMeaning" column="range_meaning" type="string" />
        <many-to-one name="codespaceRangeMeaning" column="codespace_range_meaning" class="CodespaceEntity" foreign-key="codespace_range_meaning_fk" />
        <many-to-one name="uom"
                     column="unit"
                     class="UnitEntity"
                     not-null="true"
                     foreign-key="coordinate_system_axis_unit_fk" />
    </class>
</hibernate-mapping>
