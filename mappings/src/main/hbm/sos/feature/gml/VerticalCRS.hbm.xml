<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping package="org.n52.series.db.beans"
	xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd">
    <class name="org.n52.series.db.beans.feature.gml.VerticalCRSEntity"
           table="vertical_crs">
        <id name="id"
            type="long">
            <column name="id">
                <comment>Table primary key, used for relations</comment>
            </column>
            <generator class="native">
                <param name="sequence_name">vertical_crs_seq</param>
            </generator>
        </id>
        <property name="nilReason" column="nil_reason" type="string" />
        <property name="href" column="href" type="string" />
        <property name="type" column="type" type="string" />
        <property name="role" column="role" type="string" />
        <property name="arcrole" column="arcrole" type="string" />
        <property name="title" column="title" type="string" />
        <property name="show" column="show" type="string" />
        <property name="actuate" column="actuate" type="string" />
        <property name="remoteSchema" column="remote_schema" type="string" />
        <property name="domain" type="string" >
            <column name="domain" unique-key="vertical_crs_uk">
                <comment>The identifier of the object, gml:identifier. Used as parameter for queries. Optional but unique</comment>
            </column>
        </property>
        <many-to-one name="codespace"
                     class="CodespaceEntity"
                     foreign-key="vertical_crs_codespace_fk">
            <column name="codespace_id">
                <comment>Relation/foreign key to the codespace table. Contains the gml:identifier codespace. Optional</comment>
            </column>
        </many-to-one>
        <property name="name" type="string">
            <column name="name">
                <comment>The name of the object, gml:name. Optional</comment>
            </column>
        </property>
        <many-to-one name="codespaceName" class="CodespaceEntity" foreign-key="verti_crs_codespace_name_fk">
            <column name="codespace_name_id">
                <comment>The name of the object, gml:name. Optional</comment>
            </column>
        </many-to-one>
        <property name="description" type="string">
            <column name="description">
                <comment>Description of the object, gml:description. Optional</comment>
            </column>
        </property>
        <property name="remarks" column="remarks" type="string" />
        <set name="domainOfValidity"
             table="vertical_crs_domain_of_valid">
          <key column="vertical_crs_id"
               not-null="true"
               foreign-key="vcrs_vertical_crs_fk"/>
          <many-to-many column="domain_of_validity_id"
                        class="org.n52.series.db.beans.feature.gml.DomainOfValidityEntity"
                        foreign-key="vcrs_domain_of_validity_fk"/>
        </set>
        <set name="scope"
             table="vertical_crs_scope">
          <key column="vertical_crs_id"
               not-null="true"
               foreign-key="vertical_crs_scope_fk"/>
          <element column="scope"
                   type="string"
                   not-null="true" />
        </set>
        <many-to-one name="verticalCS"
                     column="vertical_cs_id"
                     class="org.n52.series.db.beans.feature.gml.VerticalCSEntity"
                     foreign-key="vcrs_vertical_cs_fk"/>
        <many-to-one name="verticalDatum"
                     column="vertical_datum_id"
                     class="org.n52.series.db.beans.feature.gml.VerticalDatumEntity"
                     foreign-key="vcrs_vertical_datum_fk"/>
    </class>
</hibernate-mapping>
