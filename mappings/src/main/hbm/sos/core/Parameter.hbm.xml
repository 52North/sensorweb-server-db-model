<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.series.db.beans.parameter">
    <class name="Parameter" table="parameter">
        <id name="pkid" type="long">
            <column name="pkid">
                <comment>Table primary key</comment>
            </column>
            <generator class="native">
                <param name="sequence">parameter_seq</param>
            </generator>
        </id>

        <property name="name" type="string">
            <column name="name" not-null="true" index="paramNameIdx">
                <comment>Parameter name</comment>
            </column>
        </property>

        <joined-subclass extends="Parameter" name="ParameterBoolean" table="booleanparametervalue">
            <key column="parameter" foreign-key="boolparamvaluefk"/>
            <property column="value" name="value" type="org.hibernate.type.TrueFalseType" />
        </joined-subclass>

        <joined-subclass extends="Parameter" name="ParameterCategory" table="categoryparametervalue">
            <key column="parameter" foreign-key="categoryparamvaluefk"/>
            <property column="value" name="value" type="string"/>
            <many-to-one class="org.n52.series.db.beans.UnitEntity" column="unit" name="unit" foreign-key="categoryparamunitfk"/>
        </joined-subclass>

        <joined-subclass extends="Parameter" name="ParameterCount" table="countparametervalue">
            <key column="parameter" foreign-key="countparamvaluefk"/>
            <property column="value" name="value" type="integer"/>
        </joined-subclass>

        <joined-subclass extends="Parameter" name="ParameterQuantity" table="numericparametervalue">
            <key column="parameter" foreign-key="numericparamvaluefk"/>
            <property column="value" name="value" type="double"/>
            <many-to-one class="org.n52.series.db.beans.UnitEntity" column="unit" name="unit" foreign-key="numericparamunitfk"/>
        </joined-subclass>

        <joined-subclass extends="Parameter" name="ParameterText" table="textparametervalue">
            <key column="parameter"  foreign-key="textparamvaluefk"/>
            <property column="value" name="value" type="string"/>
        </joined-subclass>

         <joined-subclass extends="Parameter" name="ParameterXml" table="xmlparametervalue">
            <key column="parameter" foreign-key="bxmlparamvaluefk"/>
            <property column="value" name="value" type="string"/>
        </joined-subclass>
    </class>
</hibernate-mapping>
