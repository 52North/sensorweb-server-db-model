<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.series.db.beans">
    <class name="AbstractFeatureEntity" table="feature">
        <id name="pkid" type="long">
            <column name="pkid">
                <comment>Table primary key, used for relations</comment>
            </column>
            <generator class="native">
                <param name="sequence">featureOfInterest_seq</param>
            </generator>
        </id>

        <discriminator column="hibernatediscriminator" type="string" not-null="false"/>

        <many-to-one name="service" class="ServiceEntity" foreign-key="featureServiceFk">
        	<column name="service" not-null="true"/>
        </many-to-one>

        <many-to-one name="featureType" class="FeatureTypeEntity" foreign-key="featureFeatureTypeFk">
            <column name="featuretype" not-null="true">
                <comment>Relation/foreign key to the featureOfInterestType table. Describes the type of the featureOfInterest. Contains "featureOfInterestType".featureOfInterestTypeId</comment>
            </column>
        </many-to-one>

        <property name="domainId" type="string">
            <column name="domainId" unique-key="foiIdentifierUK">
                <comment>The identifier of the featureOfInterest, gml:identifier. Used as parameter for queries. Optional but unique</comment>
            </column>
        </property>

        <property name="name" type="string">
            <column name="name">
                <comment>The name of the featureOfInterest, gml:name. Optional</comment>
            </column>
        </property>

        <property name="description" type="string">
            <column name="description">
                <comment>Description of the featureOfInterest, gml:description. Optional</comment>
            </column>
        </property>

        <property name="descriptionXml" type="org.hibernate.type.StringClobType">
            <column name="descriptionXml">
                <comment>XML description of the feature, used when transactional profile is supported . Optional</comment>
            </column>
        </property>

        <property name="url" type="string">
            <column name="url" unique-key="featureUrl">
                <comment>Reference URL to the feature if it is stored in another service, e.g. WFS. Optional but unique</comment>
            </column>
        </property>

        <many-to-one name="codespace" class="CodespaceEntity" foreign-key="featureCodespaceEntitydomainidFk">
            <column name="codespace">
                <comment>Relation/foreign key to the codespace table. Contains the gml:identifier codespace. Optional</comment>
            </column>
        </many-to-one>

        <many-to-one name="codespaceName" class="CodespaceEntity" foreign-key="featureCodespaceEntityNameFk">
            <column name="codespaceName">
                <comment>The name of the featureOfInterest, gml:name. Optional</comment>
            </column>
        </many-to-one>

        <component class="GeometryEntity" name="geometryEntity">
            <!--
            <property column="lat" name="lat" type="double" />
            <property column="lon" name="lon" type="double" />
             -->
            <property column="geom" name="geometry" type="org.hibernate.spatial.GeometryType"/>
        </component>

        <set name="children" table="featurerelation" inverse="false" fetch="select">
            <key column="parent" not-null="true"/>
            <many-to-many class="AbstractFeatureEntity" column="child" foreign-key="featureChildFk"/>
        </set>

        <set name="parents" table="featurerelation" inverse="false" fetch="select">
            <key column="child" not-null="true"/>
            <many-to-many class="AbstractFeatureEntity" column="parent" foreign-key="featureParentFk"/>
        </set>

        <set name="parameters" table="featureparameter" cascade="delete-orphan" inverse="false">
            <key column="feature" not-null="true" foreign-key="featparamfeatfk"/>
            <many-to-many class="org.n52.series.db.beans.parameter.Parameter" column="parameter" foreign-key="featparamparamfk"/>
        </set>

		<set name="translations" table="i18nfeature" inverse="true" fetch="select">
            <key column="feature" foreign-key="feattransfeatfk"/>
            <many-to-many unique="true" column="pkid" class="org.n52.series.db.beans.i18n.I18nFeatureEntity" foreign-key="proctransi18n"/>
        </set>

        <subclass name="FeatureEntity"
              extends="AbstractFeatureEntity"
              discriminator-value="null">
        </subclass>

    </class>

    <class name="org.n52.series.db.beans.i18n.I18nFeatureEntity" table="i18nfeature">
        <id name="pkid" type="long">
            <column name="pkid" />
            <generator class="native">
                <param name="sequence">i18nfeature_seq</param>
            </generator>
        </id>

        <property name="locale" type="string" />
        <property name="name" type="string" />
        <property name="description" type="string" />
    </class>
</hibernate-mapping>
