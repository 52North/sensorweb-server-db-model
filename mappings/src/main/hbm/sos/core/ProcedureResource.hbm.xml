<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.series.db.beans">
    <class name="ProcedureEntity" table="`procedure`">
        <comment>Table to store the procedure/sensor. Mapping file: mapping/core/Procedure.hbm.xml</comment>
        <id name="id" type="long">
            <column name="id">
                <comment>Table primary key, used for relations</comment>
            </column>
            <generator class="native">
                <param name="sequence">procedure_seq</param>
            </generator>
        </id>
<!--         <many-to-one name="service" class="ServiceEntity" foreign-key="procedureServiceFk"> -->
<!--             <column name="service" not-null="true" /> -->
<!--         </many-to-one> -->
        <many-to-one name="codespace" class="CodespaceEntity" foreign-key="procCodespaceEntityIdentifierFk">
            <column name="codespace">
                <comment>Relation/foreign key to the codespace table. Contains the gml:identifier codespace. Optional</comment>
            </column>
        </many-to-one>
        <many-to-one name="codespaceName" class="CodespaceEntity" foreign-key="procCodespaceEntityNameFk">
            <column name="codespaceName">
                <comment>Relation/foreign key to the codespace table. Contains the gml:name codespace. Optional</comment>
            </column>
        </many-to-one>
        <property name="domainId" type="string">
            <column name="domainId" not-null="true" unique-key="procIdentifierUK">
                <comment>The identifier of the procedure, gml:identifier. Used as parameter for queries. Unique</comment>
            </column>
        </property>
        <property name="name" type="string">
            <column name="name">
                <comment>The name of the procedure, gml:name. Optional</comment>
            </column>
        </property>
        <property name="description" type="string">
            <column name="description">
                <comment>Description of the procedure, gml:description. Optional</comment>
            </column>
        </property>
        <property name="deleted" type="org.hibernate.type.TrueFalseType">
            <column name="deleted" not-null="true" default="'F'" check="deleted in ('T','F')">
                <comment>Flag to indicate that this procedure is deleted or not (OGC SWES 2.0 - DeleteSensor operation)</comment>
            </column>
        </property>
        <property name="descriptionFile" type="org.hibernate.type.StringClobType">
            <column name="descriptionFile">
                <comment>Field for full (XML) encoded procedure description or link to a procedure description file.
                    Optional</comment>
            </column>
        </property>
        <property name="reference" type="org.hibernate.type.TrueFalseType">
            <column name="referenceFlag" default="'F'" check="referenceFlag in ('T','F')">
                <comment>Flag to indicate that this procedure is a reference procedure of another procedure. Not used by
                    the SOS but by the Sensor Web REST-API</comment>
            </column>
        </property>
        <many-to-one name="typeOf" class="ProcedureEntity" not-null="false" foreign-key="typeOfFk">
            <column name="typeOf" not-null="false">
                <comment>Relation/foreign key to procedure table. Optional, contains procedureId if this procedure is
                    typeOf another procedure</comment>
            </column>
        </many-to-one>
        <property name="type" type="org.hibernate.type.TrueFalseType">
            <column name="isType" default="'F'" check="isType in ('T','F')">
                <comment>Flag to indicate that this procedure is a type description, has no observations.</comment>
            </column>
        </property>
        <property name="aggregation" type="org.hibernate.type.TrueFalseType">
            <column name="isAggregation" default="'T'" check="isAggregation in ('T','F')">
                <comment>Flag to indicate that this procedure is an aggregation (e.g. System, PhysicalSystem).</comment>
            </column>
        </property>
        <property name="mobile" type="org.hibernate.type.TrueFalseType">
            <column name="mobile" not-null="false" default="'F'" check="mobile in ('T','F')">
                <comment>Flag to indicate that this procedure is stationary (false) or mobile (true). Optional</comment>
            </column>
        </property>
        <property name="insitu" type="org.hibernate.type.TrueFalseType">
            <column name="insitu" not-null="false" default="'T'" check="insitu in ('T','F')">
                <comment>Flag to indicate that this procedure is insitu (true) or remote (false). Optional</comment>
            </column>
        </property>
        <set name="parents" table="procedurerelation" inverse="false" fetch="select">
            <key column="child" not-null="true" foreign-key="procparentschildfk" />
            <many-to-many class="ProcedureEntity" column="parent" foreign-key="procparentparentfk" />
        </set>
        <set name="children" table="procedurerelation" inverse="false" fetch="select">
            <key column="parent" not-null="true" foreign-key="procchildrenparentfk" />
            <many-to-many class="ProcedureEntity" column="child" foreign-key="procchildrenchildfk" />
        </set>
        <many-to-one name="procedureDescriptionFormat" class="ProcedureDescriptionFormatEntity" foreign-key="procProcDescFormatFk">
            <column name="procedureDescriptionFormat" not-null="true">
                <comment>Relation/foreign key to the procedureDescriptionFormat table. Describes the format of the
                    procedure description.</comment>
            </column>
        </many-to-one>
        <set name="validProcedureTimes" table="validproceduretime" inverse="true">
            <key foreign-key="procvalidproctimeprocfk">
                <column name="procedure" not-null="true" />
            </key>
            <one-to-many class="ValidProcedureTimeEntity" />
        </set>
        <set name="translations" table="i18nprocedure" inverse="true" fetch="select">
            <key column="procedure" foreign-key="proctransprocfk" />
            <many-to-many unique="true" column="id" class="org.n52.series.db.beans.i18n.I18nProcedureEntity"
                foreign-key="proctransi18nfk" />
        </set>
    </class>

    <class name="org.n52.series.db.beans.i18n.I18nProcedureEntity" table="i18nprocedure">
        <id name="id" type="long">
            <column name="id" />
            <generator class="native">
                <param name="sequence">i18nprocedure_seq</param>
            </generator>
        </id>

        <property name="locale" type="string" />
        <property name="name" type="string" />
        <property name="description" type="string" />
        <property name="shortName" type="string">
            <column name="shortname">
                <comment>Locale/language specific shortname of the procedure</comment>
            </column>
        </property>
        <property name="longName" type="string">
            <column name="longname">
                <comment>Locale/language specific longname of the procedure</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>