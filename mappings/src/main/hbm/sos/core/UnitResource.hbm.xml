<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.series.db.beans">
  <class name="UnitEntity" table="unit">
    <comment>Table to store the unit of measure information, used in observations and dataset. Mapping file: sos/core/UnitResources.hbm.xml</comment>
        <id name="id" type="long">
            <column name="id">
                <comment>Table primary key, used for relations</comment>
            </column>
            <generator class="native" >
                <param name="sequence_name">unit_seq</param>
            </generator>
        </id>
        <property name="domain" type="string">
            <column name="symbol" not-null="true" unique-key="unit_uk">
                <comment>The unit of measure of observations. See http://unitsofmeasure.org/ucum.html</comment>
            </column>
        </property>
        <property name="name" type="string">
            <column name="name" not-null="false">
                <comment>The name of the unit of measure of observations</comment>
            </column>
        </property>
        <property name="link" type="string">
            <column name="link" not-null="false">
                <comment>The link to an external description of the unit of measure of observations, e.g. a vocabulary</comment>
            </column>
        </property>
  		<set name="translations" table="unit_i18n" inverse="true" fetch="select">
         	<key column="unit" not-null="true" />
            <one-to-many class="org.n52.series.db.beans.i18n.I18nUnitEntity" />
        </set>
    </class>

    <class name="org.n52.series.db.beans.i18n.I18nUnitEntity" table="unit_i18n">
        <id name="id" type="long">
            <column name="id" />
            <generator class="native">
                <param name="sequence_name">unit_i18n_seq</param>
            </generator>
        </id>
		<many-to-one name="entity" column="unit" not-null="true" class="UnitEntity" foreign-key="tranlsation_unit_fk"/>
        <property name="locale" type="string" />
        <property name="name" type="string" />
    </class>
</hibernate-mapping>
