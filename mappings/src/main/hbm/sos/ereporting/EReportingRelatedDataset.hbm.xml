<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping package="org.n52.series.db.beans.ereporting"
	xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd">
    <class name="EReportingRelatedDatasetEntity" table="related_dataset">
        <comment>The dataset relation should be used if the dataset table represents a dataset.</comment>
        <id name="id" type="long">
            <column name="id">
                <comment>Table primary key</comment>
            </column>
            <generator class="native">
                <param name="sequence_name">related_dataset_seq</param>
            </generator>
        </id>
        <property name="item" type="long">
            <column name="dataset_id" not-null="true" index="idx_rel_dataset_dataset">
                <comment>Foreign Key (FK) to the dataset. Contains "dataset".id</comment>
            </column>
        </property>
        <many-to-one name="relatedItem" class="EReportingDatasetEntity" foreign-key="fk_rel_dataset_rel_dataset">
            <column name="related_dataset_id"  not-null="true">
                <comment>Relation/foreign key to the associated dataset table. Contains "dataset".id</comment>
            </column>
        </many-to-one>
        <property name="role" type="string">
            <column name="role">
                <comment>The role of the relation</comment>
            </column>
        </property>
        <property name="relatedUrl" type="string" not-null="false">
            <column name="url">
                <comment>An url to a related observation</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
