<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping package="org.n52.series.db.beans.parameter.feature"
                   xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd">
    <class name="FeatureParameterEntity" abstract="true" table="feature_parameter"
           check="type in ('bool', 'category', 'count', 'quantity', 'text', 'xml', 'json', 'complex', 'temporal')">
        <comment>Storage for additional information for platforms</comment>
        <id name="id" type="long">
            <column name="parameter_id">
                <comment>PK column of the table</comment>
            </column>
            <generator class="native">
                <param name="sequence_name">parameter_seq</param>
            </generator>
        </id>
        <discriminator type="string">
            <column name="type">
                <comment>Indicator used by Hibernate to map value specific entities.</comment>
            </column>
        </discriminator>
        <property name="name" type="string">
            <column name="name" not-null="true" index="idx_feature_param_name">
                <comment>The name of the parameter</comment>
            </column>
        </property>
        <property name="description" type="text">
            <column name="description">
                <comment>A short description of the parameter</comment>
            </column>
        </property>
        <property name="lastUpdate" not-null="false" type="timestamp">
            <column name="last_update">
                <comment>Timestamp that provides the time of the last modification of this entry</comment>
            </column>
        </property>
        <property name="domain" not-null="false" type="string">
            <column name="domain">
                <comment>The domain this parameter belongs to.</comment>
            </column>
        </property>

        <many-to-one name="feature" class="org.n52.series.db.beans.AbstractFeatureEntity"
                     foreign-key="fk_param_feature_id" insert="false" update="false">
            <column name="fk_feature_id" not-null="true" index="idx_feature_parameter">
                <comment>Reference to the Feature this Parameter describes.</comment>
            </column>
        </many-to-one>
        <property name="featureId" insert="false" update="false" type="long">
            <column name="fk_feature_id" not-null="true"/>
        </property>
        <property name="parent" type="long">
            <column name="fk_parent_parameter_id" not-null="false"/>
        </property>
        

		<many-to-one name="parent" class="FeatureParameterEntity" foreign-key="fk_param_feature_parent_id" >
            <column name="fk_parent_parameter_id" not-null="false" index="idx_feature_parent_parameter">
                <comment>Reference to the Feature this Parameter describes.</comment>
            </column>
        </many-to-one>

        <subclass discriminator-value="bool" extends="FeatureParameterEntity"
                  name="FeatureBooleanParameterEntity">
            <property name="value" type="org.n52.hibernate.type.SmallBooleanType">
                <column name="value_boolean">
                    <comment>Storage of a boolean parameter value.</comment>
                </column>
            </property>
        </subclass>

        <subclass discriminator-value="category" extends="FeatureParameterEntity"
                  name="FeatureCategoryParameterEntity">
            <property name="value" type="string">
                <column name="value_category">
                    <comment>Storage of a categorical parameter value.</comment>
                </column>
            </property>
            <many-to-one class="org.n52.series.db.beans.UnitEntity" name="unit" not-null="false"
                         foreign-key="fk_feature_param_unit">
                <column name="fk_unit_id" index="idx_feature_parameter_unit">
                    <comment>Reference to the unit of this value in the unit table</comment>
                </column>
            </many-to-one>
        </subclass>

        <subclass discriminator-value="count" extends="FeatureParameterEntity"
                  name="FeatureCountParameterEntity">
            <property name="value" type="integer">
                <column name="value_count">
                    <comment>Storage of a count parameter value.</comment>
                </column>
            </property>
        </subclass>

        <subclass discriminator-value="quantity" extends="FeatureParameterEntity"
                  name="FeatureQuantityParameterEntity">
            <property name="value" type="big_decimal" precision="20" scale="10">
                <column name="value_quantity">
                    <comment>Storage of a quantity parameter value.</comment>
                </column>
            </property>
            <many-to-one class="org.n52.series.db.beans.UnitEntity" name="unit" not-null="false">
                <column name="fk_unit_id">
                    <!-- Comment is defined above for category! -->
                </column>
            </many-to-one>
        </subclass>
        <subclass discriminator-value="text" extends="FeatureParameterEntity"
                  name="FeatureTextParameterEntity">
            <property name="value" type="string">
                <column name="value_text">
                    <comment>Storage of a textual parameter value.</comment>
                </column>
            </property>
        </subclass>
        <subclass discriminator-value="xml" extends="FeatureParameterEntity"
                  name="FeatureXmlParameterEntity">
            <property name="value" type="text">
                <column name="value_xml">
                    <comment>Storage of a XML encoded parameter value.</comment>
                </column>
            </property>
        </subclass>
        <subclass discriminator-value="json" extends="FeatureParameterEntity"
                  name="FeatureJsonParameterEntity">
            <property name="value" type="text">
                <column name="value_json">
                    <comment>Storage of a JSON encoded parameter value.</comment>
                </column>
            </property>
        </subclass>
        <subclass discriminator-value="complex" extends="FeatureParameterEntity"
                  name="FeatureComplexParameterEntity">
            <set name="value" table="feature_parameter" inverse="false" cascade="all" >
                <key>
                    <column name="fk_parent_parameter_id" not-null="false">
                        <comment>Reference to the parent parameter</comment>
                    </column>
                </key>
                <one-to-many class="FeatureParameterEntity" />
            </set>
        </subclass>
        <subclass discriminator-value="temporal" extends="FeatureParameterEntity"
                  name="FeatureTemporalParameterEntity">
            <component class="org.n52.series.db.beans.parameter.TimeRange" name="value">
                <property name="from" type="timestamp">
                    <column name="value_temporal_from" length="29" >
                        <comment>Storage of a temporal from parameter value.</comment>
                    </column>
                </property>
                <property name="to" type="timestamp">
                    <column name="value_temporal_to" length="29">
                        <comment>Storage of a temporal to parameter value.</comment>
                    </column>
                </property>
            </component>
        </subclass>
    </class>
</hibernate-mapping>
