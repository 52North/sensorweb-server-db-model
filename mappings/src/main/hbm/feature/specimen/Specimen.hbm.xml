<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping package="org.n52.series.db.beans"
	xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd">
    <subclass name="org.n52.series.db.beans.feature.SpecimenEntity"
    				 extends="AbstractFeatureEntity"
                     discriminator-value="SpecimenEntity">
        <join table="specimen">
            <key foreign-key="fk_specimen_feature">
                <column name="fk_feature_id" >
                    <comment>Foreign Key (FK) to the related feature from the feature table. Contains "feature".id</comment>
                </column>
            </key>

            <property name="materialClass" type="string">
                <column name="material_class" not-null="true">
                    <comment>Material class</comment>
                </column>
            </property>
            <property name="samplingTimeStart"
                      type="timestamp">
                <column name="sampling_time_start"
                        length="29"
                        not-null="true">
                    <comment>Time stamp when the specimen was started</comment>
                </column>
            </property>
            <property name="samplingTimeEnd"
                      type="timestamp">
                <column name="sampling_time_end"
                        length="29"
                        not-null="true">
                    <comment>Time stamp when the specimen was stopped</comment>
                </column>
            </property>
            <property name="samplingMethod" type="string">
                <column name="sampling_method">
                	<comment>Sampling method as referenced link</comment>
                </column>
            </property>
            <property name="size" type="big_decimal">
                <column name="size">
                    <comment>Sampling method as referenced link</comment>
                </column>
            </property>
            <many-to-one name="sizeUnit"
                         class="UnitEntity"
                         foreign-key="fk_specimen_unit">
                <column name="fk_size_unit_id"
                        not-null="false">
                    <comment>Foreign Key (FK) to the related unit of measure. Contains "unit".unitid. Optional</comment>
                </column>
            </many-to-one>
            <property name="currentLocation" type="string">
                <column name="current_location" >
                    <comment>Sampling method as referenced link</comment>
                </column>
            </property>
            <property name="specimenType" type="string">
                <column name="specimen_type">
                    <comment>Specimen type</comment>
                </column>
            </property>
            <!-- processingDetails  not yet supported -->
        </join>
    </subclass>
</hibernate-mapping>
