<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping package="org.n52.series.db.beans.sta"
                   xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd">
    <class name="ThingEntity" table="thing">
        <id name="id" type="long">
            <column name="thing_id"/>
            <generator class="native">
                <param name="sequence_name">thing_seq</param>
            </generator>
        </id>
        <property name="name" type="string">
            <column name="name" not-null="true"/>
        </property>
        <property name="description" type="string">
            <column name="description" not-null="true"/>
        </property>
        <property name="properties" type="text">
            <column name="properties" not-null="false"/>
        </property>
        <many-to-one name="locationEntity" class="LocationEntity" foreign-key="fk_thing_location">
            <column name="fk_location_id" not-null="false"/>
        </many-to-one>
        <set name="historicalLocationEntities" table="historical_location" inverse="true">
            <key foreign-key="fk_thing_historical_location">
                <column name="fk_thing_id" not-null="false"/>
            </key>
            <one-to-many class="HistoricalLocationEntity" />
        </set>
    </class>

</hibernate-mapping>
