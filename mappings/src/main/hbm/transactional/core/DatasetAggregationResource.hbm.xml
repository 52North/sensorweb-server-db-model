<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping package="org.n52.series.db.beans.sta"
                   xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd">
    <class name="DatasetAggregationEntity" table="dataset_aggregation">
        <id name="id" type="long">
            <column name="dataset_aggregation_id"/>
            <generator class="native">
                <param name="sequence_name">dataset_aggregation_seq</param>
            </generator>
        </id>

        <property name="identifier" type="string" index="idx_dataset_aggregationidentifier">
            <column name="identifier" not-null="true" unique-key="un_dataset_aggregation_identifier">
                <comment>Unique identifier of the dataset aggregation. Should be a URI, UUID. E.g. http://www.example.org/123, 123-321.</comment>
            </column>
        </property>
        <property name="staIdentifier" type="string" index="idx_dataset_aggregation_staIdentifier">
            <column name="sta_identifier" not-null="true" unique-key="un_dataset_aggregation_staIdentifier">
                <comment>Unique identifier used by SensorThingsAPI for addressing the entity. Should be a URI (reference to a vocabulary entry), UUID. E.g. 123, 123-321</comment>
            </column>
        </property>
        <property name="name" type="string">
            <column name="name" not-null="true"/>
        </property>
        <property name="description" type="text">
            <column name="description" not-null="true"/>
        </property>
        <component class="org.n52.series.db.beans.GeometryEntity" name="geometryEntity">
            <property name="geometry" type="jts_geometry">
                <column name="observed_area" not-null="false"/>
            </property>
        </component>

        <set name="datasets" table="dataset" inverse="true" cascade="save-update" >
            <key foreign-key="fk_dataset_aggregation_datasets">
                <column name="fk_dataset_aggregation_id" not-null="true" />
            </key>
            <one-to-many class="org.n52.series.db.beans.DatasetEntity"/>
        </set>
        <!-- Comments for the translations are defined below! -->
        <set name="translations" table="dataset_aggregation_i18n" inverse="true" fetch="select">
            <key column="fk_dataset_aggregation_id" not-null="true" />
            <one-to-many class="org.n52.series.db.beans.i18n.I18nDatasetAggregationEntity" />
        </set>
    </class>

    <class name="org.n52.series.db.beans.i18n.I18nDatasetAggregationEntity" table="dataset_aggregation_i18n">
        <id name="id" type="long">
            <column name="dataset_aggregation_i18n_id">
                <comment>PK column of the table</comment>
            </column>
            <generator class="native">
                <param name="sequence_name">dataset_aggregation_i18n_seq</param>
            </generator>
        </id>
        <many-to-one name="entity" class="DatasetAggregationEntity" foreign-key="fk_dataset_aggregation">
            <column name="fk_dataset_aggregation_id" not-null="true">
                <comment>Reference to the feature table this internationalization belongs to.</comment>
            </column>
        </many-to-one>
        <property name="locale" not-null="true" type="string">
            <column name="locale">
                <comment>Locale/language specification for this entry</comment>
            </column>
        </property>
        <property name="name" type="string">
            <column name="name">
                <comment>Locale/language specific name of the dataset aggregation</comment>
            </column>
        </property>
        <property name="description" type="text">
            <column name="description">
                <comment>Locale/language specific description of the dataset aggregation</comment>
            </column>
        </property>
    </class>

</hibernate-mapping>
